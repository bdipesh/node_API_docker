# Example environment variables for local development
# Copy this file to .env and fill in values

# Render/Production: set this in your Render Web Service, not in the repo
# If using Render Postgres, prefer the pooled internal connection string
# Append sslmode=require if not already present
# Example pooled:
# postgres://USER:PASSWORD@HOST:PORT/DB?pgbouncer=true&connection_limit=1&sslmode=require
# Example direct:
# postgres://USER:PASSWORD@HOST:PORT/DB?sslmode=require
DATABASE_URL="postgres://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require"

# JWT secrets
JWT_SECRET="replace-with-strong-random-secret"
JWT_REFRESH_SECRET="replace-with-strong-random-refresh-secret"

# Optional: base URL for Swagger servers (no trailing slash)
# e.g., https://api.yoursfriend.com
BASE_URL="http://localhost:3000"
